<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#002d6c">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#013681">


            <TextView
                android:text="Sensor Monitor"
                android:textSize="30sp"
                android:textColor="@android:color/white"
                android:layout_margin="5dp"
                android:id="@+id/title" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#6da6f2"
            android:gravity="center">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/btnHR"
                    android:src="@drawable/hr_icon"
                    android:scaleType="fitStart"
                    android:background="#00ffffff"
                    android:cropToPadding="true" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HR"
                        android:textSize="48sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:id="@+id/tvHeartRate" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="bpm"
                        android:textSize="28sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:id="@+id/bpm"
                        />
                </LinearLayout>

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/btnGSR"
                    android:src="@drawable/gsr_icon"
                    android:scaleType="fitStart"
                    android:background="#00ffffff"
                    android:layout_margin="10dp"
                    android:cropToPadding="false" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GSR"
                        android:textSize="48sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:id="@+id/tvGSR" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="     MΩ    "
                        android:textSize="28sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        />
                </LinearLayout>


                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/btnTemperature"
                    android:src="@drawable/temp_icon"
                    android:scaleType="fitStart"
                    android:background="#00ffffff"
                    android:layout_margin="10dp"
                    android:cropToPadding="false" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ST"
                        android:textSize="48sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:id="@+id/tvTemperature" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ºF"
                        android:textSize="28sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        />
                </LinearLayout>

            </LinearLayout>

        </TableRow>

    </TableLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:text="If you are feeling dysreflexic, press the yellow button. Press it again when you no longer feel dysreflexic."
                            android:textSize="22sp"
                            android:textColor="#ffffff"
                            android:id="@+id/textView4" />

                        <Button
                            android:text="I am feeling Dysreflexic"
                            android:layout_height="150dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_width="300dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="26sp"
                            android:background="#f2e48d"
                            android:textColor="#222222"
                            android:id="@+id/btnAlert" />
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        >

                        <TextView
                            android:layout_width="300dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:layout_marginTop="5dp"
                            android:text="Press the green button to begin recording data. To stop recording data press the button again."
                            android:textSize="22sp"
                            android:textColor="#ffffff" />

                        <Button
                            android:text="Start Recording Data"
                            android:layout_height="150dp"
                            android:layout_marginLeft="5dp"
                            android:layout_width="300dp"
                            android:layout_marginTop="5dp"
                            android:textSize="26sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="#8ff28d"
                            android:textColor="#222222"
                            android:id="@+id/btnRecord" />
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        >


                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="300dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="300dp"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:layout_marginTop="5dp"
                                android:text="If you want to leave a note, type it in the textbox and hit submit."
                                android:textSize="22sp"
                                android:textColor="#ffffff" />

                            <Button
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="240dp"
                                android:layout_height="match_parent"
                                android:text="Submit"
                                android:id="@+id/submitNote"
                                android:layout_gravity="center_horizontal"
                                android:background="#8ff28d" />

                        </LinearLayout>

                        <EditText
                            android:layout_width="300dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_height="150dp"
                            android:id="@+id/notepad"
                            android:background="#ffffff" />


                    </LinearLayout>

                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TableLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:text="To switch between training mode\n and normal mode, hit this switch"
                        android:id="@+id/textView"
                        android:textSize="22sp"
                        android:textColor="#FFFFFF"

                        />

                    <Switch
                        android:layout_width="200dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/trainingSwitch"
                        android:background="#d2d2d2"
                        android:textSize="20sp"
                        android:buttonTint="#96caff"
                        android:textOff="Normal Mode"
                        android:textOn="Training Mode"
                        android:text="Training Mode"
                        android:checked="true" />
                </TableRow>
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#002d6c"
                    >

                    <Button
                        android:layout_width="180dp"
                        android:layout_height="60dp"
                        android:text="Connect to Band"
                        android:layout_marginTop="25dp"
                        android:id="@+id/btnConnect"
                        android:layout_span="0"
                        android:layout_marginRight="5dp"
                        android:clickable="true"
                        android:state_pressed="true"

                        android:textColorHighlight="#c2d3ff" />
                    <Button
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:text="Allow HR"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="25dp"
                        android:textAlignment="center"
                        android:id="@+id/btnConsent"
                        android:layout_span="1" />
                    <TextView
                        android:layout_height="2dp" />
                </TableRow>


            </TableLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
